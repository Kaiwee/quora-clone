<a href="/home">Main Page</a>


<% @questions.each do |question|%>
	<p><a href="/questions/<%= question.id %>">Title: <%= question.title %></a></p>
	<p>Description: <%= question.description %></p>
	<p><% if logged_in? and question.user_id == current_user.id %>
		<a href="/questions/<%= question.id %>/edit">Edit</a>
		<form action="/questions/<%= question.id %>/destroy" method="post">
		<input type="submit" value="Delete">
		</form>
	<% end %>
	</p>
	<p>
		<form action="/questions/<%= question.id %>/answers" method="post">
		<input type=text placeholder="Enter your answer" name="answer[description]"><br>
		<input type="submit" value="Answer">
		</form>
	</p>
<% end%>


